<section class="page-container">
	<div class="block-contain">
		<form action="/principalPage" method="get">
			<input type="text" action="/get" id="searchInput" class="search-input" name="filterFunction" placeholder="Rechercher par fonctions...">
		</form>

	</div>
	<h1 class="H1Employee">Liste de vos employés</h1>
	<div class="listEmployee">
		{% for employee in user.employeeCollection %}
			<div class="employee-card">
				<img src="/images/uploads/{{employee.photo }}" alt="" class="employee-photo">
				<div class="employee-details">
					<h2 class="employeeName">Nom :
						{{employee.name}}</h2>
					<p class="employeeFonction">Fonction actuelle :
						{{employee.fonction }}</p>
					<p class="employeeBlame">Blâmes :
						{{employee.blame }}</p>
				</div>
				<div class="employee-actions">
					<a class="delete" href="/deleteEmployee/{{employee.id}}">Supprimer</a>
					<a class="blame" href="/blameEmployee/{{employee.id }}">Blâmer</a>
					<a class="update" href="/updateEmployee/{{employee.id }}">Modifier</a>
				</div>
			</div>
		{% endfor %}
	</div>
</section>
